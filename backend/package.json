{
  "name": "cropguard-backend",
  "version": "1.0.0",
  "description": "CropGuard Backend API - Node.js/Express server for pest detection",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "node run-security-tests.js",
    "test:security:owasp": "jest tests/security-owasp-top10.test.js",
    "test:security:auth": "jest tests/security-auth-advanced.test.js",
    "test:security:injection": "jest tests/security-injection-bypass.test.js",
    "test:security:api": "jest tests/security-api-rate-limiting.test.js",
    "test:security:infrastructure": "jest tests/security-infrastructure.test.js",
    "test:security:agricultural": "jest tests/security-agricultural-scenarios.test.js",
    "test:security:assessment": "jest tests/security-assessment-runner.test.js",
    "lint": "eslint src --ext .js,.ts",
    "format": "prettier --write src/**/*.{js,ts}",
    "seed": "node src/scripts/seed.js",
    "seed:accounts": "node src/scripts/seed.js accounts",
    "seed:full": "node src/scripts/seed.js full",
    "seed:clear": "node src/scripts/seed.js clear",
    "seed:reset": "node src/scripts/seed.js reset"
  },
  "keywords": [
    "api",
    "express",
    "nodejs",
    "agriculture",
    "ai"
  ],
  "author": "CropGuard Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.7",
    "sharp": "^0.32.4",
    "sqlite3": "^5.1.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/scripts/**",
      "!src/**/*.config.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
